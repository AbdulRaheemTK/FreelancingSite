<%- include('includes/head.ejs') %>
    </head>

    <body>
        <!-- Header Section -->
        <%- include('includes/navigation.ejs') %>

            <!-- Main Section -->
            <main class="formPage my-xl">
                <div class="content-box">
                    <div class="formWrapper">
                        <% if(errorMessage) {%>
                            <div class="user-message user-message--error">
                                <b><%= errorMessage %></b>
                            </div>
                        <% } else if(!errorMessage) { %>
                            <div class="user-message user-message--error">
                                <b>Please add all the Information in the form in order to get yourself visible in our freelancing developers page</b>
                                <br>
                                You can edit the Information later using My Account Page!
                            </div>
                        <% } %>
                        <form action="/postAccountAboutMe" class="form" method="POST">
                            <!-- Input:TextArea -->
                            <div class="form__field">
                                <label for="formInput#text">About Me:* </label>
                                <textarea
                                        class="input input--text <%= validationErrors.find(e => e.param === 'EPIAboutMe')  ? 'border border-danger' : '' %>"
                                        id="formInput#text"
                                        type="text"
                                        rows="5"
                                        name="EPIAboutMe"><%=oldInput.EPIAboutMe %></textarea>
                            </div>
                            <div class="text-center">
                                <a class="btn btn--sub btn--lg  my-md  " href="/addPersonalinformationForm"> < </a>
                                <input class="btn btn--sub btn--lg  my-md  " type="submit" value=">" />
                            </div>
                            <input class="btn btn--sub btn--lg  my-md" name="formName" value="addAboutMeForm" hidden>
                        </form>
                    </div>
                </div>
            </main>
            <%- include('includes/end.ejs') %>