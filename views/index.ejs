<%- include('includes/head.ejs') %>
</head>

<body>
<!-- Header Section -->
<%- include('includes/navigation.ejs') %>

<!-- Main Section -->
<main class="home">
    <section class="hero-section text-center">
        <div class="container container--narrow">
            <div class="hero-section__box">
                <h2>CONNECT WITH <span>DEVELOPERS</span></h2>
                <h2>FROM AROUND THE WORLD</h2>
            </div>

            <div class="hero-section__search">
                <form class="form" action="/" method="get">
                    <div class="form__field">
                        <label for="formInput#search">Search Developers </label>
                        <input class="input input--text" id="formInput#search" type="text" name="name"
                               placeholder="Search by developer name"/>
                    </div>

                    <input class="btn btn--sub btn--lg" type="submit" value="Search"/>
                </form>
            </div>
        </div>
    </section>
    <!-- Search Result: DevList -->
    <section class="devlist">

        <div class="container">
            <div class="grid grid--three">
                <% users.forEach(user=> { %>
                    <% if (user.personalInformation.name && user.personalInformation.abilitiesAndExperiences && user.personalInformation.personelImageLink && user.aboutMe ) { %>
                        <div class="column card">
                            <div class="dev">
                                <a href="/profile/<%= user._id %>" class="card__body">
                                    <div class="dev__profile">
                                        <img class="avatar avatar--md"
                                             src="<%= user.personalInformation.personelImageLink %>"
                                             alt="image"/>
                                        <div class="dev__meta">
                                            <h3>
                                                <%= user.personalInformation.name %>
                                            </h3>
                                            <h5>
                                                <%= user.personalInformation.abilitiesAndExperiences %>
                                            </h5>
                                        </div>
                                    </div>
                                    <p class="dev__info">
                                        <%= user.aboutMe %>
                                    </p>
                                    <div class="dev__skills">

                                        <% user.skills.forEach(skill=> { %>
                                            <span class="tag tag--pill tag--main">
                              <small><%= skill.name %></small>
                            </span>
                                        <% }); %>

                                    </div>
                                </a>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        </div>
    </section>
    <%- include('includes/pagination.ejs') %>
</main>
<%- include('includes/end.ejs') %>